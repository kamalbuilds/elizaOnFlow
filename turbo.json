{
    "$schema": "https://turbo.build/schema.json",
    "tasks": {
        "check-types": {
            "dependsOn": [
                "build"
            ]
        },
        "dev": {
            "persistent": true,
            "cache": false
        },
        "build": {
            "outputs": [
                "dist/**"
            ],
            "dependsOn": [
                "^@elizaos/core#build"
            ]
        },
        "@elizaos-plugins/plugin-flow-advanced#build": {
            "dependsOn": [
                "@elizaos/core#build",
                "@elizaos-plugins/plugin-di#build",
                "@elizaos-plugins/plugin-flow#build"
            ]
        }
    }
}
